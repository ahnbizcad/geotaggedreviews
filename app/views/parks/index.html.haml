%h1 Listing parks

-if user_signed_in?
  = link_to 'New Park', new_park_path

%table
  %tr
    %th
    %th
    %th

  - @parks.each do |park|
    %tr
      %td
        = link_to park do
          = park.address
          = filepicker_image_tag park.image_url
      -if user_signed_in? && current_user.admin?
        %td= link_to 'Edit', edit_park_path(park)
        %td= link_to 'Destroy', park, :method => :delete, :data => { :confirm => 'Delete park?' }
